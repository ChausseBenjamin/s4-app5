% self-incrementing Test-ID
\newcounter{tid}
\newcommand{\tid}{\stepcounter{tid}\thetid}
\newcommand{\tidlabel}[1]{\refstepcounter{tid}\label{#1}\thetid}

\definecolor{myred}{RGB}{243,69,0}

\tcbset{mystyle/.style={
  breakable,
  enhanced,
  outer arc=0pt,
  arc=0pt,
  colframe=myred,
  colback=myred!20,
  attach boxed title to top left,
  boxed title style={
    colback=myred,
    outer arc=0pt,
    arc=0pt,
    top=3pt,
    bottom=3pt,
    },
  fonttitle=\sffamily
  }
}

\newtcolorbox[auto counter,number within=section]{error}[2][]{
  mystyle,label=#2,
  title=Erreur~\thetcbcounter,
  overlay unbroken and first={
      \path
        let
        \p1=(title.north east),
        \p2=(frame.north east)
        in
        node[anchor=west,font=\sffamily,color=myred,text width=\x2-\x1]
        at (title.east) {#1};
  }
}
\newtcolorbox[auto counter]{assumption}[2][]{
  mystyle,label=#2,
  colback=white,
  rightrule=0pt,
  toprule=0pt,
  title=Assumption SLR.\thetcbcounter,
  overlay unbroken and first={
      \path
        let
        \p1=(title.north east),
        \p2=(frame.north east)
        in
        node[anchor=west,font=\sffamily,color=myred,text width=\x2-\x1]
        at (title.east) {#1};
  }
}
