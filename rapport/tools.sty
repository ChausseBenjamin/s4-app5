\newcommand{\quicktab}[4]{
  \begin{table}[H]
    \centering
    \caption{#1}
    \label{tab:#2}
    \begin{tabular}{#3}
      #4
    \end{tabular}
  \end{table}
}

\newcommand{\quickfig}[4]{
\begin{figure}[H]
  \centering
  \includegraphics[width=#3\textwidth]{#4}
  \caption{#1}
  \label{fig:#2}
\end{figure}
}

